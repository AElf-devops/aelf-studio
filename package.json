{
  "name": "aelf-contract-build",
  "displayName": "aelf-contract-build",
  "description": "Build aelf Smart Contracts",
  "publisher": "aelf-developers",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aelf-contract-build.build",
        "title": "aelf-contract-build: Build aelf smart contract..."
      },
      {
        "command": "aelf-contract-build.deploy",
        "title": "aelf-contract-build: Deploy aelf smart contract..."
      },
      {
        "command": "aelf-contract-build.faucet",
        "title": "aelf-contract-build: Get testnet tokens from faucet..."
      }
    ]
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/extensionTests.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "npm run check-types && npm run lint && node esbuild.js",
    "watch-web": "npm-run-all -p watch-web:*",
    "watch-web:esbuild": "node esbuild.js --watch",
    "watch-web:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package-web": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ./hello-world",
    "deploy": "vsce publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@types/assert": "^1.5.10",
    "@types/mocha": "^10.0.7",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-web": "^0.0.58",
    "@vscode/vsce": "^3.1.0",
    "assert": "^2.1.0",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.1",
    "glob": "^11.0.0",
    "husky": "^9.1.5",
    "mocha": "^10.7.3",
    "npm-run-all": "^4.1.5",
    "semantic-release-vsce": "^5.7.4",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "aelf-sdk": "^3.4.15",
    "fflate": "^0.8.2"
  }
}
